<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" width="1000" height="520" fontSize="14">
	<mx:Script>
		<![CDATA[
			import cl.larrainvial.carterasAFP.components.ConfigUtil;
			import cl.larrainvial.carterasAFP.events.SubregionEvent;
			import cl.larrainvial.carterasAFP.model.ModelLocator;
			import cl.larrainvial.carterasAFP.vo.SubregionVO;
			
			import mx.controls.Alert;
			import mx.controls.Text;
			import mx.events.FlexEvent;
			import mx.events.ListEvent;
			
			[Bindable] private var subregion:SubregionVO;
			[Bindable] private var model:ModelLocator = ModelLocator.getInstance(); 
			
			protected function fnBuscar():void
			{
				// TODO Auto-generated method stub
				var ev:SubregionEvent = new SubregionEvent(SubregionEvent.EVENT_SUBREGION_LISTAR);
				ev.dispatch();
			}
			
			protected function fnGuardar(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				
				if(txtSubregion.text == ''){
					Alert.show('Ingrese un valor en el campo "Subregión"', 'Atención');
					return;
					
				}
				
				if(txtMercado.text == ''){
					Alert.show('Ingrese un valor en el campo "Mercado"', 'Atención');
					return;
					
				}
				
				if(txtRegion.text == ''){
					Alert.show('Ingrese un valor en el campo "Región"', 'Atención');
					return;
					
				}
				if(subregion){
					var ev:SubregionEvent = new SubregionEvent(SubregionEvent.EVENT_SUBREGION_ACTUALIZAR);
					ev.callback = fnBuscar;
					ev.xmlParam = '<WSParam><Parametros><XmlIn><Root><Dato nombre="' + txtSubregion.text + '" mercado="' + txtMercado.text + '" region="' + txtRegion.text + '" id="' + subregion.id + '" /></Root></XmlIn></Parametros></WSParam>'
					ev.dispatch();
				} else {
					ev = new SubregionEvent(SubregionEvent.EVENT_SUBREGION_GUARDAR);
					ev.callback = fnBuscar;
					ev.xmlParam = '<WSParam><Parametros><XmlIn><Root><Dato nombre="' + txtSubregion.text + '" mercado="' + txtMercado.text + '" region="' + txtRegion.text + '" /></Root></XmlIn></Parametros></WSParam>'
					ev.dispatch();	
				}
				
			}
			
			protected function fnSeleccionActualizacion(event:ListEvent):void
			{
				// TODO Auto-generated method stub
				this.subregion = dg.selectedItem as SubregionVO;
				txtMercado.text = subregion.mercado;
				txtRegion.text = subregion.region;
				txtSubregion.text = subregion.nombre;
			}
			
			protected function fnLimpiar(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				this.subregion = null;
				txtMercado.text = '';
				txtRegion.text = '';
				txtSubregion.text = '';
				dg.selectedItem = null;
			}
			
		]]>
	</mx:Script>
	<mx:VBox width="100%" height="100%" horizontalAlign="center">
		<mx:HBox top="0" width="100%" horizontalCenter="0" horizontalAlign="center">
			<mx:Form width="50%" verticalGap="30">
				<mx:FormItem label="Nombre">
					<mx:TextInput id="txtSubregion" focusOut="txtSubregion.text = ConfigUtil.fnFormatoNombres(txtSubregion.text)" maxChars="30"/>
				</mx:FormItem>
				<mx:FormItem label="Mercado">
					<mx:TextInput id="txtMercado" focusOut="txtSubregion.text = ConfigUtil.fnFormatoNombres(txtMercado.text)" maxChars="20"/>
				</mx:FormItem>
			</mx:Form>
			<mx:Form width="50%" verticalGap="30">
				<mx:FormItem label="Región">
					<mx:TextInput id="txtRegion" focusOut="txtSubregion.text = ConfigUtil.fnFormatoNombres(txtRegion.text)" maxChars="25"/>
				</mx:FormItem>
				
				
			</mx:Form>
		</mx:HBox>
			
		<mx:HBox>
			<mx:Button label="{subregion ? 'Actualizar' : 'Guardar'}" click="fnGuardar(event)"/>
			<mx:Button label="Nuevo" click="fnLimpiar(event)"/>			
		</mx:HBox>
		<mx:HBox horizontalAlign="right" width="100%">
			<mx:Button label="Buscar" click="fnBuscar()"/>	
		</mx:HBox>
		
		<mx:DataGrid id="dg" width="97%" creationComplete="fnBuscar()" itemClick="fnSeleccionActualizacion(event)" dataProvider="{model.arrSubregiones}">
			<mx:columns>
				<mx:DataGridColumn dataField="nombre" headerText="Nombre"/>
				<mx:DataGridColumn dataField="mercado" headerText="Mercado"/>
				<mx:DataGridColumn dataField="region" headerText="Región"/>
			</mx:columns>
		</mx:DataGrid>
		
	</mx:VBox>
	
	
</mx:Canvas>
